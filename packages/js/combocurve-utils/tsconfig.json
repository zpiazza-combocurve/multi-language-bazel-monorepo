{
	"compilerOptions": {
		"outDir": "dist",
		"target": "ES2021",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": false,

		"allowJs": true,
		"checkJs": false,

		"declaration": true,

		"strict": true,
		"skipLibCheck": true,

		"allowUnreachableCode": false,
		"allowUnusedLabels": false
	}
}
